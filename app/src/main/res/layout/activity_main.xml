<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/dark_grey"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:textStyle="bold"
    android:text="Выбери интересующие тебя параметры!"
    android:textColor="@color/root_color"
    android:textAlignment="center"
    android:textSize="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_marginVertical="10dp">

</TextView>
        <TextView
            android:textStyle="bold"

            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ВЫБЕРИ ВОЗРАСТ"
            android:textColor="@color/root_color"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="70dp"
            tools:ignore="RtlCompat" />


        <RadioGroup
            android:textColor="@color/black"

            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="110dp">

            <RadioButton

                android:button="@android:color/transparent"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:id="@+id/old_6_7"
                android:text="6-7 лет"

                android:layout_marginVertical="5dp"

                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:button="@android:color/transparent"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:layout_marginVertical="5dp"
                android:id="@+id/old_8_9"
                android:textStyle="bold"
                android:text="8-9 лет"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:layout_marginVertical="5dp"
               android:button="@android:color/transparent"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:id="@+id/old_10_11"
                android:textStyle="bold"
                android:text="10-11 лет"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:button="@android:color/transparent"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:id="@+id/old_12_13"
                android:text="12-13 лет"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:button="@android:color/transparent"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:id="@+id/old_14_15"
                android:text="14-15 лет"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:button="@android:color/transparent"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:id="@+id/old_16_17"
                android:text="16-17 лет"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:button="@android:color/transparent"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:id="@+id/old_18_19"
                android:text="18-19 лет"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:button="@android:color/transparent"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:id="@+id/old_20_24"
                android:text="20-24 лет"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:button="@android:color/transparent"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:id="@+id/old_25_29"
                android:text="25-29 лет"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
        </RadioGroup>


        <TextView
            android:textAlignment="center"
            android:textStyle="bold"

            android:layout_gravity="end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ВЫБЕРИ ПОЛ"
            android:textSize="15sp"

            android:textColor="@color/root_color"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="70dp"
            tools:ignore="RtlCompat" />
        <RadioGroup
            android:textColor="@color/black"

            android:layout_gravity="center|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginVertical="110dp">

            <RadioButton
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/gold"
                android:button="@drawable/radio_button"
                android:text="ЗОЛОТО"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_marginVertical="5dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:id="@+id/serebro"
                android:text="СЕРЕБРО"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:textStyle="bold"
                android:button="@drawable/radio_button"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_marginVertical="5dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:id="@+id/copper"
                android:text="БРОНЗОВЫЙ"
                android:textColor="@drawable/radio_button"
                android:textSize="15sp"
                android:textStyle="bold"
                android:button="@drawable/radio_button"
                android:textAlignment="center"
                android:background="@drawable/radio_button"
                android:layout_width="100dp"
                android:layout_marginVertical="5dp"
                android:layout_height="35dp"/>
        </RadioGroup>
        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginVertical="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/root_color"
            android:text="ВЫБЕРИ МЕДАЛЬ"
            android:textSize="15sp"

            android:layout_gravity="center|top"/>



        <RadioGroup
            android:textColor="@color/black"

            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="110dp">

            <RadioButton
                android:text="МАЛЬЧИК"
                android:id="@+id/man"
                android:textColor="@drawable/radio_button"
                android:button="@drawable/radio_button"
                android:background="@drawable/radio_button"
                android:textAlignment="center"
                android:layout_marginVertical="5dp"
                android:textStyle="bold"
                android:textSize="15sp"

                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <RadioButton
                android:id="@+id/women"
                android:text="ДЕВОЧКА"
                android:textColor="@drawable/radio_button"
                android:button="@drawable/radio_button"
                android:background="@drawable/radio_button"
                android:textAlignment="center"
                android:layout_marginVertical="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="35dp"

               />

        </RadioGroup>


       
    </FrameLayout>
    <Button
        android:shape="oval"

        android:id="@+id/gotovo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/button_ready"
        android:textSize="30dp"
        android:text="ГОТОВО"

        android:textColor="@drawable/button_ready" />
    <Button

        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginVertical="40dp"
        android:background="@drawable/button_ready"
        android:shape="oval"
        android:text="ПОМОЩЬ"
        android:textColor="@drawable/button_ready"

        android:textSize="30dp" />

</LinearLayout>

</ScrollView>