<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="15sp"

            android:layout_gravity="start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ВЫБЕРИ ВОЗРАСТ"
            android:textColor="@color/black"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="70dp"
            />


        <RadioGroup
            android:textColor="@color/black"

            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="110dp">

            <RadioButton
                android:textColor="@color/black"
                android:id="@+id/old_6_7"
                android:text="6-7 лет"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/old_8_9"
                android:text="8-9 лет"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/old_10_11"
                android:text="10-11 лет"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/old_12_13"
                android:text="12-13 лет"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/old_14_15"
                android:text="14-15 лет"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/old_16_17"
                android:text="16-17 лет"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/old_18_19"
                android:text="18-19 лет"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/old_20_24"
                android:text="20-24 лет"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/old_25_29"
                android:text="25-29 лет"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>


        <TextView
            android:layout_gravity="end"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ВЫБЕРИ ПОЛ"
            android:textSize="15sp"

            android:textColor="@color/black"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="70dp" />
        <RadioGroup
            android:textColor="@color/black"

            android:layout_gravity="center|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginVertical="110dp">

            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/gold"
                android:text="ЗОЛОТО"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/serebro"
                android:text="СЕРЕБРО"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"
                android:textSize="15sp"

                android:id="@+id/copper"
                android:text="БРОНЗОВЫЙ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
        <TextView
            android:layout_marginVertical="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="ВЫБЕРИ МЕДАЛЬ"
            android:textSize="15sp"

            android:layout_gravity="center|top"/>



        <RadioGroup
            android:textColor="@color/black"

            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="110dp">

            <RadioButton
                android:textColor="@color/black"

                android:id="@+id/man"
                android:text="МАЛЬЧИК"
                android:textSize="15sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/black"

                android:id="@+id/women"
                android:text="ДЕВОЧКА"
                android:layout_width="wrap_content"
                android:textSize="15sp"

                android:layout_height="wrap_content"/>

        </RadioGroup>

        <Button
            android:shape="rectangle"

            android:id="@+id/gotovo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginVertical="20dp"
            android:background="#4CAF50"
            android:backgroundTint="#4CAF50"
            android:text="ГОТОВО"
            android:textColor="@color/white" />

    </FrameLayout>


</ScrollView>