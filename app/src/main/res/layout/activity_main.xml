<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_gravity="start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="ВЫБЕРИ ВОЗРАСТ"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="70dp"
        />
<ScrollView
    android:layout_gravity="start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioGroup
        android:textColor="@color/black"

        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="110dp">

        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/old_6_7"
            android:text="6-7 лет"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/old_8_9"
            android:text="8-9 лет"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/old_10_11"
            android:text="10-11 лет"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/old_12_13"
            android:text="12-13 лет"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/old_14_15"
            android:text="14-15 лет"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/old_16_17"
            android:text="16-17 лет"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>
</ScrollView>

    <TextView
        android:layout_gravity="end"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="ВЫБЕРИ ПОЛ"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="70dp" />
    <RadioGroup
        android:textColor="@color/black"

        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="110dp">

        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/gold"
            android:text="ЗОЛОТО"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/serebro"
            android:text="СЕРЕБРО"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/copper"
            android:text="БРОНЗОВЫЙ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <TextView
        android:layout_marginVertical="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="ВЫБЕРИ МЕДАЛЬ"
        android:layout_gravity="center|top"/>



    <RadioGroup
        android:textColor="@color/black"

        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="110dp">

        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/man"
            android:text="МАЛЬЧИК"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:textColor="@color/black"

            android:id="@+id/women"
            android:text="ДЕВОЧКА"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <Button
        android:shape="rectangle"
        android:radius="10dp"
        android:id="@+id/gotovo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginVertical="20dp"
        android:background="#4CAF50"
        android:backgroundTint="#4CAF50"
        android:text="ГОТОВО"
        android:textColor="@color/black" />

</FrameLayout>